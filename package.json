{
  "name": "ai-commerce-store",
  "version": "1.0.0",
  "description": "---\r title: Gorgoyle Marketplace\r ---",
  "main": "index.js",
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "api",
    "web-frontend"
  ],
  "scripts": {
    "prepare": "husky",
    "postinstall": "git config commit.template .gitmessage || true",
    "test:api": "pnpm --filter api test",
    "host:api": "pnpm --filter api host",
    "build:api": "pnpm --filter api build",
    "api:deploy:render": "pnpm install && pnpm --filter @ai-store/prisma-db migrate:deploy && pnpm --filter api build && pnpm --filter @ai-store/prisma-db generate",
    "seed:api": "pnpm --filter @ai-store/prisma-db seed",
    "dev:seedLocal:api": "pnpm --filter @ai-store/prisma-db seed",
    "prisma:generate": "pnpm --filter @ai-store/prisma-db generate",
    "prisma:migrate:dev": "pnpm --filter @ai-store/prisma-db migrate:dev",
    "prisma:migrate:deploy": "pnpm --filter @ai-store/prisma-db migrate:deploy",
    "prisma:studio": "pnpm --filter @ai-store/prisma-db studio",

    "dev:web": "pnpm --filter web-frontend dev",
    "build:web": "pnpm --filter web-frontend build",
    "start:web": "pnpm --filter web-frontend start",
    
    "clean": "pnpm --filter pricing-api clean && pnpm --filter @ai-store/web-frontend clean",
    "typecheck": "pnpm --filter @ai-store/prisma-db typecheck && pnpm --filter pricing-api typecheck && pnpm --filter @ai-store/web-frontend typecheck",
    "lint": "pnpm --filter pricing-api lint && pnpm --filter @ai-store/web-frontend lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "test":  "pnpm -r test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Noname01010101/ai-store.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Noname01010101/ai-store/issues"
  },
  "homepage": "https://github.com/Noname01010101/ai-store#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
